---
interface Props {
  title: string;
  description: string;
  image: string;
  slug: string;
}

const { title, description, image, slug } = Astro.props;
---

<a href={`/gallery/${slug}`} class="group block">
  <div class="relative h-[400px] overflow-hidden rounded-lg">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent flex flex-col justify-end p-6 opacity-90 group-hover:opacity-100 transition-opacity">
      <h3 class="text-2xl font-bold mb-2">{title}</h3>
      <p class="text-gray-300 group-hover:text-white transition-colors">{description}</p>
    </div>
  </div>
</a>